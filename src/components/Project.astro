---
import { Image } from "astro:assets";
---

<div class="bg-card text-card-foreground border rounded-xl flex flex-col">
  <Image
    src={Astro.props.image}
    width={1920}
    height={1080}
    alt={Astro.props.name}
    class="w-full h-auto object-cover overflow-hidden rounded-t-xl border-b"
  />
  <div class="p-4 grow">
    <h3 class="text-xl md:text-2xl font-bold mb-2">{Astro.props.name}</h3>
    <p class="text-sm text-muted-foreground my-1">
      {Astro.props.description}
    </p>
    <p class="text-sm my-1">
      {
        Astro.props.year ? (
          <>
            <strong>Year: </strong>
            {Astro.props.year}
          </>
        ) : (
          <>
            <strong>Years: </strong>
            {Astro.props.yearBegin}-{Astro.props.yearEnd || "current"}
          </>
        )
      }
    </p>
    {
      Astro.props.techStack ? (
        <p class="text-sm my-1">
          <strong>Tech stack: </strong>
          {Astro.props.techStack.join(", ")}
        </p>
      ) : (
        ""
      )
    }
  </div>
  <div class="flex flex-col p-4 pt-0 justify-center gap-2">
    {
      Astro.props.website ? (
        <a
          href={Astro.props.website}
          class="bg-primary text-primary-foreground hover:bg-primary/80 transition-colors font-semibold rounded-md px-3 py-1.5 inline-block text-center text-sm"
        >
          Visit the website
        </a>
      ) : (
        ""
      )
    }{
      Astro.props.git ? (
        <a
          href={Astro.props.git}
          class={`${Astro.props.website ? "bg-secondary text-secondary-foreground" : "bg-primary text-primary-foreground"} hover:bg-secondary/80 transition-colors font-semibold rounded-md px-3 py-1.5 inline-block text-center text-sm`}
        >
          View the Git repository
        </a>
      ) : (
        ""
      )
    }
  </div>
</div>
