---
const { gitRepository, website, name, screenshot } = Astro.props;
---

<div class="px-3 py-9 w-full md:w-1/2 lg:w-1/3 flex flex-col">
  <img src={screenshot} alt={name} class="w-full border-border border rounded-lg mb-6">
  <h3 class="text-2xl font-bold my-2">{name}</h3>
  <div class="prose grow">
    <p>
      <slot />
    </p>
  </div>
  <div class="flex flex-row flex-wrap w-full mt-4 gap-2">
    {website ? (<a href={website} class="bg-primary text-primary-foreground text-lg px-3 py-2 rounded-md hover:bg-primary/75 transition-colors text-center">
      Visit the website
    </a>) : ""}
    {gitRepository ? (<a href={gitRepository} class="bg-accent text-accent-foreground text-lg px-3 py-2 rounded-md hover:bg-accent/75 transition-colors text-center">
      View the Git repository
    </a>) : ""}
  </div>
</div>